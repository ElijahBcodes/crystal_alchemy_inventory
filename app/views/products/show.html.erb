<div class="min-h-screen bg-gradient-to-br from-purple-100 via-blue-50 to-purple-50">
  <div class="w-full max-w-4xl mx-auto px-4 py-8">
    
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-100 mb-5 text-green-700 font-medium rounded-lg inline-block">
        <%= notice %>
      </p>
    <% end %>

    <div class="bg-white rounded-lg shadow-lg p-8 mb-6">
      <%= render @product %>
    </div>

    <div class="flex flex-wrap gap-4 items-center">
      <%= link_to "Edit this product", edit_product_path(@product), class: "inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition" %>
      
      <%= link_to "Back to products", products_path, class: "inline-block px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transition" %>

      <%= button_to "Destroy this product", @product, method: :delete, class: "px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>

  </div>
</div>