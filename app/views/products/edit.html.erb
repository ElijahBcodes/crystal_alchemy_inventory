<div class="min-h-screen bg-gradient-to-br from-purple-100 via-blue-50 to-purple-50">
  <div class="w-full max-w-2xl mx-auto px-4 py-8">
    
    <h1 class="text-5xl font-bold bg-gradient-to-r from-purple-600 via-blue-600 to-purple-600 bg-clip-text text-transparent mb-8">
      Editing Product
    </h1>

    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
      <%= render "form", product: @product %>
    </div>

    <div class="flex flex-wrap gap-4">
      <%= link_to "Show this product", @product, class: "inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition" %>
      
      <%= link_to "Back to products", products_path, class: "inline-block px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transition" %>
    </div>

  </div>
</div>